<%= link_to cocktails_path do %>
  <i class="fas fa-undo-alt back"></i>
<% end %>

<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
    <i class="far fa-trash-alt" id="delete"></i>
  <% end %>
<% end %>

<%= link_to 'Add ingredients/doses',  new_cocktail_dose_path(@cocktail) %>

